<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.guest.willitrain.MainActivity">

    <TextView
        android:text="Hello Weather!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Zip"
        android:id="@+id/searchZipButton"
        android:layout_marginBottom="93dp"
        android:layout_above="@+id/searchCityButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search City"
        android:id="@+id/searchCityButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/searchZipText"
        android:layout_above="@+id/searchZipButton"
        android:layout_centerHorizontal="true"
        android:hint="Enter Zip"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchCityText"
        android:layout_above="@+id/searchCityButton"
        android:layout_alignRight="@+id/searchZipText"
        android:layout_alignEnd="@+id/searchZipText"
        android:layout_alignLeft="@+id/searchZipText"
        android:layout_alignStart="@+id/searchZipText"
        android:hint="Enter City"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="or"
        android:id="@+id/textView2"
        android:layout_above="@+id/searchCityText"
        android:layout_alignRight="@+id/searchZipButton"
        android:layout_alignEnd="@+id/searchZipButton"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:gravity="center"
        android:layout_alignTop="@+id/searchZipButton"
        android:layout_marginTop="47dp" />
</RelativeLayout>
